{
  "name": "banka",
  "version": "1.0.0",
  "description": "a lightweight banking application",
  "main": "index.js",
  "scripts": {
    "lint": "eslint index.js --fix",
    "build": "babel . --ignore node_modules,build --require babel-polyfill --out-dir ./build",
    "start": "node --require babel-polyfill build/index.js",
    "dev": "nodemon --exec babel-node index.js",
    "test": "npm run model && nyc --require babel-polyfill mocha build/test/index.spec.js --timeout 10000 --exit",
    "model": "babel-node models/controller/populate",
    "superuser": "babel-node models/controller/superuser",
    "test-dev": "npm run model && nyc --require @babel/register --require @babel/polyfill mocha test/index.spec.js --timeout 10000 --exit",
    "test-single": "mocha --require @babel/register --require @babel/polyfill test/routes/transaction.spec.js --timeout 10000 --exit",
    "coverage": "nyc report --reporter=text-lcov | nyc report --reporter=lcov"
  },
  "author": "Adeola Adeyemo",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "@babel/runtime": "^7.4.4",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai-http": "^4.2.1",
    "cloudinary": "^1.14.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "express": "^4.16.4",
    "express-fileupload": "^1.1.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-authentication": "^0.4.0",
    "make-runnable": "^1.3.6",
    "nodemailer": "^6.1.1",
    "pg": "^7.10.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.4.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-promise": "^4.1.1",
    "mocha": "^6.1.3",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^14.1.1"
  }
}
